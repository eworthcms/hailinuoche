page{ height: 100%; overflow: hidden; background-color: #157bc9; position: relative; }

.bg1{ position: absolute; top: 0; left: 0; width: 100%; }

.section-bg{ width: 100%; height: 100%; text-align: center; position: absolute; left: 0; top: 30rpx; z-index: 2; }
.section-bg .bg{ width: 76%; }
.section-bg .guize{ width: 100%; position: absolute; top: 300rpx; text-align: center; color: #666; font-size: 26rpx; }
.section-bg .guize .s1{ color: #1075c1; }

.section-btns{ width: 100%; position: absolute; bottom: 200rpx; left: 0; z-index: 2; box-sizing: border-box; }
.section-btns .btn{ width: 70%; height: 80rpx; line-height: 78rpx; background: -webkit-gradient(linear, left top, left bottom, from(#fff06d), to(#ffcc0f)); color: #e10019; font-size: 34rpx; }

.modal{ position: fixed; z-index: 9; width: 100%; height: 100%; }
.modal .mask{ position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.3); }
.modal .cont{ position: fixed; top: 80rpx; left: 80rpx; right: 80rpx; z-index: 9; background-color: #ff0000; color: #fff; }
.modal .close{ position: absolute; top: -70rpx; right: 0; width: 60rpx; z-index: 9; }
.modal .cont .h1{ font-size: 24rpx; padding: 20rpx; }
.modal .cont .codeimg{ height: 750rpx; overflow: hidden; }
.modal .cont .codeimg image{ width: 100%; margin-top: -50rpx; }
.modal .btns{ box-sizing: border-box; padding: 30rpx 70rpx 20rpx; }
.modal .btns .btn{ width: 100%; height: 88rpx; line-height: 86rpx; background: -webkit-gradient(linear, left top, left bottom, from(#fff06d), to(#ffcc0f)); color: #e10019; font-size: 34rpx; margin-bottom: 25rpx; }
.modal .btns .btn:nth-child(2){ background: -webkit-gradient(linear, left top, left bottom, from(#fcf8da), to(#fff8be)); }


.cont-list{ width: 100%; padding: 0 40rpx; position: absolute; bottom: 40rpx; left: 0; z-index: 2; box-sizing: border-box; }
.cont-list .list{ display: flex; align-items: center; padding: 18rpx 30rpx; position: relative; background-color: #fff;  }
.cont-list .list .col-1{ margin-right: 20rpx; display: flex; align-items: center; }
.cont-list .list .col-1 image{ width: 36rpx; }
.cont-list .list .col-2{ flex: 1; color: #000; font-size: 30rpx; }
.cont-list .list .col-3 image{ width: 18rpx; } 

